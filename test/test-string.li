(let ((str "我不明白你說什麼")
      (first (lambda (str) (ref str 0))))
  (assert (equal? (ref str 0) (first "我")))
  (assert (equal? (ref str 1) (first "不")))
  (assert (equal? (ref str 2) (first "明")))
  (assert (equal? (ref "kc" 1) (first "c")))
  (assert (equal? (length str) 8))
  (assert (equal? (string-append str str str) "我不明白你說什麼我不明白你說什麼我不明白你說什麼"))
  )
