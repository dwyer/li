(let ()
  (import list)
  (import sort)
  (display "testing sort...")
  (assert (list-sorted? < (list-sort < (map (lambda _ (rand)) (iota 1000)))))
  # test stablility
  (assert (equal? (list-merge (lambda (x y)
                                (< (abs x) (abs y)))
                              '(0 -2 4 8 -10)
                              '(-1 3 -4 7))
                  '(0 -1 -2 3 4 -4 7 8 -10)))
  (print 'ok))
