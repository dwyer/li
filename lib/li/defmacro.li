(let ()
  (import (li random-symbol))

  (define-macro
    defmacro
    (lambda (expr _)
      (let ((sign (cadr expr))
            (body (cddr expr)))
        (let ((name (car sign))
              (args (cdr sign))
              (expr-name (random-symbol)))
          `(define-macro
             ,name
             (lambda (,expr-name _)
               (apply (lambda ,args
                        ,@body)
                      (cdr ,expr-name))))))))

  (export defmacro))
